{
  "name": "zan/common-bundle",
  "description": "Common code shared among many Symfony applications",
  "type": "symfony-bundle",
  "license": "MIT",
  "require": {
    "php": ">=8.0",
    "symfony/http-foundation": "^5.4||^6.4",
    "symfony/http-kernel": "^5.4||^6.4",
    "doctrine/annotations": "^1.13||^2.0",
    "doctrine/dbal": "^3.3",
    "symfony/dependency-injection": "^5.4||^6.4"
  },
  "autoload": {
    "psr-4": {
      "Zan\\CommonBundle\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Zan\\CommonBundle\\Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpstan/phpstan": "^1.4",
    "phpunit/phpunit": "^9.5"
  },
  "scripts": {
    "test": "phpunit tests/",
    "code-quality": "phpstan analyse"
  }
}
